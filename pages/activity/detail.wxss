.activity-detail-container {
  background-color: #fff;
  min-height: 100vh;
}

.activity-detail {
  padding: 40rpx;
}

.activity-header {
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.activity-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-bottom: 20rpx;
}

.activity-time {
  display: flex;
  align-items: center;
}

.time-text {
  font-size: 26rpx;
  color: #999;
  margin-left: 8rpx;
}

.activity-image {
  margin-bottom: 40rpx;
  text-align: center;
}

.activity-image image {
  max-width: 100%;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.activity-content {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

.empty-state {
  margin-top: 200rpx;
  text-align: center;
}
