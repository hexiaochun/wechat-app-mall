<!-- 游戏中心首页 -->
<view class="game-container">
  
  <!-- 轮播图区域 -->
  <view class="carousel-section">
    <swiper class="game-swiper" indicator-dots="true" indicator-active-color="#e64340" autoplay circular>
      <swiper-item wx:for="{{banners}}" wx:key="id">
        <image 
          mode="aspectFill" 
          bindtap="tapBanner" 
          data-item="{{ item }}" 
          src="{{item.picUrl}}" 
          class="carousel-image"
        />
      </swiper-item>
    </swiper>
  </view>

  <!-- 功能入口区域 -->
  <view class="entry-section">
    <view class="entry-grid">
      <!-- 积分商城兑换 -->
      <view class="entry-item" bindtap="goPointsMall">
        <view class="entry-icon points-mall">
          <van-icon name="points" size="40" color="#ff6b35" />
        </view>
        <text class="entry-title">积分商城兑换</text>
      </view>
      
      <!-- 兑换联盟 -->
      <view class="entry-item" bindtap="goExchangeAlliance">
        <view class="entry-icon exchange-alliance">
          <van-icon name="exchange" size="40" color="#4CAF50" />
        </view>
        <text class="entry-title">兑换联盟</text>
      </view>
    </view>
  </view>

  <!-- 会员充值板块 -->
  <view class="membership-section">
    <view class="section-header">
      <view class="section-title">
        <van-icon name="diamond-o" size="20" color="#e64340" />
        <text>会员充值</text>
      </view>
    </view>
    
    <view class="membership-grid">
      <view 
        class="package-item" 
        wx:for="{{membershipPackages}}" 
        wx:key="id"
        bindtap="onPackageClick"
        data-package="{{item}}"
      >
        <view class="package-header">
          <view class="package-title">{{item.title}}</view>
          <view class="package-validity">{{item.validity}}</view>
        </view>
        
        <view class="package-prices">
          <view class="current-price">¥{{item.price}}</view>
          <view class="original-price">¥{{item.originalPrice}}</view>
        </view>
        
        <view class="package-description">{{item.description}}</view>
        
        <view class="package-button">
          <van-button 
            type="primary" 
            size="small" 
            round
            custom-style="background: linear-gradient(135deg, #e64340 0%, #ff8a80 100%); border: none;"
          >
            立即充值
          </van-button>
        </view>
      </view>
    </view>
  </view>

</view>

<!-- 弹出编辑昵称和头像的框 -->
<login show="{{ nickPopShow }}" avatarUrl="{{ popavatarUrl }}" name="{{ popnick }}" />