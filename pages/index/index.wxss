/* 游戏中心首页样式 */
.game-container {
  background: #f5f5f5;
  min-height: 100vh;
}

/* 轮播图区域 */
.carousel-section {
  margin-bottom: 20rpx;
}

.game-swiper {
  height: 459rpx;
  width: 100%;
}

.carousel-image {
  width: 100%;
  height: 100%;
}

/* 功能入口区域 */
.entry-section {
  background: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx 10rpx 20rpx;
}

.entry-grid {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.entry-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.entry-item:active {
  background: #f0f0f0;
  transform: scale(0.95);
}

.entry-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.entry-icon.category-icon {
  width: 320rpx;
  height: 380rpx;
  border-radius: 16rpx;
  background: #fff;
  border: 2rpx solid #f0f0f0;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.category-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.entry-icon.all-categories {
  width: 320rpx;
  height: 380rpx;
  background: linear-gradient(135deg, #666 0%, #999 100%);
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.entry-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  text-align: center;
  line-height: 1.2;
}

/* 会员充值区域 */
.membership-section {
  background: #fff;
  margin: 0 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.section-header {
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-title text {
  margin-left: 12rpx;
}

.refresh-btn {
  padding: 8rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.refresh-btn:active {
  background: #f0f0f0;
  transform: rotate(180deg);
}

/* 加载状态 */
.loading-container {
  padding: 60rpx;
  text-align: center;
}

/* 空状态 */
.empty-container {
  padding: 60rpx;
}

/* 套餐网格 */
.membership-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 30rpx;
}

.package-item {
  background: linear-gradient(135deg, #fff 0%, #fafafa 100%);
  border: 2rpx solid #f0f0f0;
  border-radius: 16rpx;
  padding: 30rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: auto;
  min-height: 140rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.package-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 30rpx rgba(230, 67, 64, 0.15);
  border-color: #e64340;
  background: linear-gradient(135deg, #fefefe 0%, #f8f8f8 100%);
}

.package-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #e64340 0%, #ff8a80 100%);
}

/* 左侧商品信息 */
.package-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-right: 20rpx;
}

.package-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.package-description {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.package-tags {
  margin-top: 0;
}

.tag {
  font-size: 20rpx;
  color: #e64340;
  background: #fff5f5;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  display: inline-block;
}


/* 中间价格区域 */
.package-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 150rpx;
  margin-right: 20rpx;
  gap: 8rpx;
}

/* 价格容器 */
.price-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

/* 会员价标签（现在显示价格） */
.member-price-label {
  font-size: 36rpx;
  font-weight: 700;
  color: #e64340;
  background: transparent;
  padding: 0;
  border: none;
  line-height: 1;
  text-align: center;
}

/* 原价 */
.original-price {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
  text-align: center;
  line-height: 1;
}

.discount {
  font-size: 20rpx;
  color: #fff;
  background: #e64340;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  display: inline-block;
}

/* 右侧按钮区域 */
.package-right {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 120rpx;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .membership-grid {
    gap: 15rpx;
    padding: 20rpx;
  }
  
  .package-item {
    padding: 25rpx;
    min-height: 120rpx;
    flex-direction: row;
  }
  
  .package-title {
    font-size: 30rpx;
  }
  
  .member-price-label {
    font-size: 34rpx;
  }
  
  .package-left {
    margin-right: 15rpx;
  }
  
  .package-center {
    min-width: 120rpx;
    margin-right: 15rpx;
  }
  
  .package-right {
    min-width: 100rpx;
  }
}

/* 动画效果 */
.package-item {
  animation: slideUp 0.6s ease-out forwards;
}

.package-item:nth-child(1) { animation-delay: 0.1s; }
.package-item:nth-child(2) { animation-delay: 0.2s; }
.package-item:nth-child(3) { animation-delay: 0.3s; }
.package-item:nth-child(4) { animation-delay: 0.4s; }
.package-item:nth-child(5) { animation-delay: 0.5s; }
.package-item:nth-child(6) { animation-delay: 0.6s; }

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}