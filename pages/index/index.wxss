/* 游戏中心首页样式 */
.game-container {
  background: #f5f5f5;
  min-height: 100vh;
}

/* 轮播图区域 */
.carousel-section {
  margin-bottom: 20rpx;
}

.game-swiper {
  height: 459rpx;
  width: 100%;
}

.carousel-image {
  width: 100%;
  height: 100%;
}

/* 功能入口区域 */
.entry-section {
  background: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.1);
  padding: 40rpx 20rpx;
}

.entry-grid {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.entry-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.entry-item:active {
  background: #f0f0f0;
  transform: scale(0.95);
}

.entry-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.entry-icon.category-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  background: #fff;
  border: 2rpx solid #f0f0f0;
  overflow: hidden;
}

.category-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.entry-icon.all-categories {
  background: linear-gradient(135deg, #666 0%, #999 100%);
}

.entry-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  text-align: center;
}

/* 会员充值区域 */
.membership-section {
  background: #fff;
  margin: 0 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.section-header {
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-title text {
  margin-left: 12rpx;
}

.refresh-btn {
  padding: 8rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.refresh-btn:active {
  background: #f0f0f0;
  transform: rotate(180deg);
}

/* 加载状态 */
.loading-container {
  padding: 60rpx;
  text-align: center;
}

/* 空状态 */
.empty-container {
  padding: 60rpx;
}

/* 套餐网格 */
.membership-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 30rpx;
}

.package-item {
  background: linear-gradient(135deg, #fff 0%, #fafafa 100%);
  border: 2rpx solid #f0f0f0;
  border-radius: 12rpx;
  padding: 20rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  height: auto;
  min-height: 280rpx;
}

.package-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 25rpx rgba(230, 67, 64, 0.2);
  border-color: #e64340;
}

.package-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #e64340 0%, #ff8a80 100%);
}

/* 商品信息 */
.package-info {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
}

.package-header {
  margin-bottom: 12rpx;
}

.package-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-align: center;
}

.package-tags {
  margin-top: 8rpx;
  text-align: center;
}

.tag {
  font-size: 20rpx;
  color: #e64340;
  background: #fff5f5;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.package-description {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 12rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-align: center;
}

/* 商品详情 */
.package-details {
  margin-bottom: 12rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 4rpx;
  font-size: 20rpx;
}

.detail-label {
  color: #999;
  margin-right: 6rpx;
}

.detail-value {
  color: #666;
}

.package-prices {
  margin-bottom: 20rpx;
  text-align: center;
}

.current-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #e64340;
}

.package-button {
  margin-top: auto;
  text-align: center;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .membership-grid {
    gap: 15rpx;
    padding: 20rpx;
  }
  
  .package-item {
    padding: 15rpx;
    min-height: 260rpx;
  }
  
  .package-title {
    font-size: 26rpx;
  }
  
  .current-price {
    font-size: 30rpx;
  }
  
  .detail-item {
    font-size: 18rpx;
  }
}

/* 动画效果 */
.package-item {
  animation: slideUp 0.6s ease-out forwards;
}

.package-item:nth-child(1) { animation-delay: 0.1s; }
.package-item:nth-child(2) { animation-delay: 0.2s; }
.package-item:nth-child(3) { animation-delay: 0.3s; }
.package-item:nth-child(4) { animation-delay: 0.4s; }
.package-item:nth-child(5) { animation-delay: 0.5s; }
.package-item:nth-child(6) { animation-delay: 0.6s; }

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}