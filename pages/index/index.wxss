/* 游戏中心首页样式 */
.game-container {
  background: #f5f5f5;
  min-height: 100vh;
}

/* 轮播图区域 */
.carousel-section {
  margin-bottom: 20rpx;
}

.game-swiper {
  height: 400rpx;
  width: 100%;
}

.carousel-image {
  width: 100%;
  height: 100%;
}

/* 功能入口区域 */
.entry-section {
  background: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.1);
  padding: 40rpx 20rpx;
}

.entry-grid {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.entry-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.entry-item:active {
  background: #f0f0f0;
  transform: scale(0.95);
}

.entry-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.entry-icon.points-mall {
  background: linear-gradient(135deg, #ff6b35 0%, #ffa726 100%);
}

.entry-icon.exchange-alliance {
  background: linear-gradient(135deg, #4CAF50 0%, #81C784 100%);
}

.entry-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  text-align: center;
}

/* 会员充值区域 */
.membership-section {
  background: #fff;
  margin: 0 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.section-header {
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-title text {
  margin-left: 12rpx;
}

/* 套餐网格 */
.membership-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 30rpx;
}

.package-item {
  background: linear-gradient(135deg, #fff 0%, #fafafa 100%);
  border: 2rpx solid #f0f0f0;
  border-radius: 12rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.package-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 25rpx rgba(230, 67, 64, 0.2);
  border-color: #e64340;
}

.package-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #e64340 0%, #ff8a80 100%);
}

.package-header {
  margin-bottom: 20rpx;
}

.package-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.package-validity {
  font-size: 22rpx;
  color: #e64340;
  background: #fff5f5;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
}

.package-prices {
  margin-bottom: 20rpx;
}

.current-price {
  font-size: 36rpx;
  font-weight: 700;
  color: #e64340;
  margin-bottom: 4rpx;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.package-description {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 25rpx;
}

.package-button {
  margin-top: auto;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .membership-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 15rpx;
    padding: 20rpx;
  }
  
  .package-item {
    padding: 25rpx 15rpx;
  }
}

/* 动画效果 */
.package-item {
  animation: slideUp 0.6s ease-out forwards;
}

.package-item:nth-child(1) { animation-delay: 0.1s; }
.package-item:nth-child(2) { animation-delay: 0.2s; }
.package-item:nth-child(3) { animation-delay: 0.3s; }
.package-item:nth-child(4) { animation-delay: 0.4s; }
.package-item:nth-child(5) { animation-delay: 0.5s; }
.package-item:nth-child(6) { animation-delay: 0.6s; }

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}